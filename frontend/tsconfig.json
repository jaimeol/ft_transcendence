{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",   
    "outDir": "public/dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}