{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "outDir": "public/dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noEmitOnError": true,
    "isolatedModules": false
  },
  "include": ["src/**/*"]
}
